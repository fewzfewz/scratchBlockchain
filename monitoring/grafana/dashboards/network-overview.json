{
  "dashboard": {
    "title": "Modular Blockchain - Network Overview",
    "tags": ["blockchain", "modular", "testnet"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Block Height",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "chain_block_height",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Transaction Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(chain_transactions_total[5m])",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Validators",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "chain_validator_count",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Total Stake",
        "type": "stat",
        "gridPos": {"x": 6, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "chain_validator_stake_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Peer Count",
        "type": "stat",
        "gridPos": {"x": 12, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "chain_peer_count",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Pending Transactions",
        "type": "stat",
        "gridPos": {"x": 18, "y": 8, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "chain_transactions_pending",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Consensus Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "chain_consensus_time_seconds",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Block Time",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "chain_block_time_seconds",
            "legendFormat": "{{instance}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
