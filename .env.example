# Blockchain Node Configuration
# Copy this file to .env and customize for your environment

# Node Configuration
NODE_NAME=node1
RUST_LOG=info

# Network Ports
RPC_PORT=9933
P2P_PORT=30333

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Grafana Credentials
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=blockchain2024

# Data Directories
DATA_DIR=./data
CONFIG_DIR=./config
BACKUP_DIR=./backups

# Performance Tuning
MAX_PEERS=50
MEMPOOL_SIZE=10000
BLOCK_TIME=5

# Security
ENABLE_TLS=false
API_RATE_LIMIT=100
